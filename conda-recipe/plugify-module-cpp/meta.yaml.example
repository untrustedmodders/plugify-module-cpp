{% set name = "plugify-module-cpp" %}
{% set version = "REPLACE_VERSION" %}

package:
  name: {{ name|lower }}
  version: {{ version }}

source:
  path: .

build:
  number: 0
  skip: true  # [not (linux64 or win64)]
  binary_relocation: false
  detect_binary_files_with_prefix: false
  missing_dso_whitelist:
    - "*/ld-linux*.so.*"  # [linux]
    - "*/libc.so.*"       # [linux]
    - "*/libm.so.*"       # [linux]
    - "*/libdl.so.*"      # [linux]
    - "*/libpthread.so.*" # [linux]
    - "*/librt.so.*"      # [linux]
    - "*/libplugify.so*"  # [linux]
    - "*/plugify.dll"     # [win]

requirements:
  build:
    - {{ compiler('cxx') }}  # [build_platform != target_platform]
  host:
    - sysroot_linux-64 2.17  # [linux64]
  run:
    - __glibc >=2.17          # [linux64]

test:
  commands:
    - test -f $PREFIX/bin/libplugify-module-cpp.so  # [linux]
    - test -f $PREFIX/plugify-module-cpp.pmodule    # [linux]
    - if not exist %PREFIX%\\bin\\plugify-module-cpp.dll exit 1  # [win]
    - if not exist %PREFIX%\\plugify-module-cpp.pmodule exit 1   # [win]

about:
  home: https://github.com/{{ environ.get('GITHUB_REPOSITORY', 'your-org/your-repo') }}
  license: MIT
  license_family: MIT
  license_file: LICENSE
  summary: C++ Language Module for Plugify
  description: |
    C++ Language Module provides C++ language support for the Plugify
    plugin system, enabling dynamic loading and execution of C++ plugins.
  doc_url: https://github.com/{{ environ.get('GITHUB_REPOSITORY', 'your-org/your-repo') }}/blob/main/README.md
  dev_url: https://github.com/{{ environ.get('GITHUB_REPOSITORY', 'your-org/your-repo') }}

extra:
  recipe-maintainers:
    - {{ environ.get('GITHUB_ACTOR', 'your-username') }}